@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&display=swap')
@import url('https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600&display=swap');

white = #FFFFFF
black = #150823
dark = #220C3A
blue = #587FDF
green = #1AEBC3
purple = #8619F4
pink = #EB1AA4
yellow = #FFBE6C
dark-pink = #9D1870 
light-pink = #FF79D1
dark-purple = #35006C
light-purple = #B57DED

ScreenCondition = 'max-width'
ScreenConditionValue = 1440px
ScreenConditionMobilePortrait = 600px
ScreenConditionTabletPortrait = 800px

titleBorderBottom()
  content ''
  height 13px
  border-radius 20px
  position absolute

FiraCode()
  font-family 'Fira Code', monospace

FiraSans()
  font-family 'Fira Sans', sans-serif

cardShadow() 
  box-shadow -7px 4px 11px rgba(0, 0, 0, 0.21)

mainGradient()
  background linear-gradient(179.45deg, #8B0DF6 0.47%, #587FDF 51.04%, rgba(27, 251, 207, 0.941176) 99.53%)

font-header()
  FiraCode()
  color white
  font-size 22px
  font-weight 500

*
  padding 0
  margin 0
  box-sizing border-box
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-decoration: none;
  color white
  FiraCode()

h1
  font-size 59px
  font-weight 700

.subtitle
  font-size 20px
  font-weight 500

p, .horizontalList span, .body, ul, ol
  font-size 26px
  font-weight normal
  FiraSans()
  color white
  padding 10px 0

.blue
  color blue

.green
  color green

.purple
  color purple

.light-pink
  color light-pink

.dark-pink
  color dark-pink

.pink
  color pink

.light-purple
  color light-purple

.row
  padding 164px 120px 165px 0
  display: flex
  gap 59px

body
  background-color dark

.color-border
  position relative
  border: 2px solid green
  border-radius: 20px

  &::after, &::before
    content: ''
    display: block
    position absolute
    border-radius: 20px
    margin auto

  &::after
    width: 100.5%;
    height 100.5%;
    border: 5px solid purple

  &::before
    width: 101%;
    height 101%;
    border: 10px solid light-pink
    border-radius: 20px

.post header .v-image
  display flex
  justify-content center
  align-items center

.post
  width: 80%
  height: auto
  margin auto auto 50px auto

.post .button
  width: auto
  margin: 40px 0

.post .v-image
  margin: 20px 0
  background-color: dark-pink

.post .v-image.media
  margin: unset

.post h1
  font-size 36px
  text-align center

.post h2, .post h3, .post h4, .post h5
  font-size 30px

  &:not(:first-child)::before
    content '>'
    color green
    padding-right 15px

.post h1, .post h2, .post h3, .post h4, .post h5
  padding 20px 0

.post iframe
  width 100%
  height 500px
  margin: 20px 0

.post .Media
  width 100%
  height auto

.post p
  color: rgba(255,255,255,1)

.post p:last-child
  margin-bottom 40px

.post em
  color: yellow

.post ol, .post ul
  margin: 10px 0 10px 40px;

.post ol { counter-reset: item; }
.post ol li { display: block; }
.post ol li:before {
  content: counter(item) ". ";
  counter-increment: item;
  color: green;
}

.blogGallery
  display: flex
  flex-direction column
  flex-wrap: wrap
  justify-content: center
  gap: 30px
  font-style italic
  font-size 20px
  text-align center

  &.mosaic
    flex-flow wrap

    .Media
        max-width 300px
        height auto

    .fullWidth
      max-width 900px

  .buttonGroup
    display: flex
    justify-content: center
    gap 20px

  button
    font-style normal

@media screen and ({ScreenCondition}: ScreenConditionValue)
  h1
    font-size 36px

  .subtitle, p, body
    font-size 20px

  .row
    justify-content center
    align-items center
    flex-direction column
    padding 100px 10%

@media screen and ({ScreenCondition}: ScreenConditionMobilePortrait)
  .row
    padding 100px 5%

  .post
    width 95%

  .blogGallery
    .button
      margin: 10px 0


  .buttonGroup
    flex-direction column
    gap 10px !important

@media screen and ({ScreenCondition}: ScreenConditionTabletPortrait)
  .post
    width 95%

